<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal" >
        
        <EditText 
        	android:id="@+id/barcodeSearch"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="3"
        	android:hint="@string/enterbarcode" />
        
        <Button 
        	android:id="@+id/searchBut"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="@string/button_search" 
        	android:textSize="16sp"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal">
        
        <Button 
        	android:id="@+id/newBut"
        	android:layout_width="0dp"
        	android:layout_height="80dp"
        	android:layout_weight="1"
        	android:text="@string/button_new"
        	android:textSize="12sp"
        	android:enabled="true"/>
    
    	<Button 
        	android:id="@+id/editBut"
        	android:layout_width="0dp"
        	android:layout_height="80dp"
        	android:layout_weight="1"
        	android:text="@string/button_edit"
        	android:textSize="12sp"
        	android:enabled="true"/>
    
    	<Button 
        	android:id="@+id/inventoryBut"
        	android:layout_width="0dp"
        	android:layout_height="80dp"
        	android:layout_weight="1"
        	android:text="@string/button_inventory"
        	android:textSize="12sp"
        	android:enabled="true"/>
    
    	<Button 
        	android:id="@+id/locateBut"
        	android:layout_width="0dp"
        	android:layout_height="80dp"
        	android:layout_weight="1"
        	android:text="@string/button_locate"
        	android:textSize="12sp"
        	android:enabled="true"/>
    	  	
    </LinearLayout>
    
    <FrameLayout 
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
</LinearLayout>
